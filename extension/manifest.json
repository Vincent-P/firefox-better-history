{
    "description": "A Better History page inspired by Vivaldi",
    "manifest_version": 2,
    "name": "better-history",
    "version": "0.1.9",
    "homepage_url": "https://github.com/Vincent-P/firefox-better-history",
    "background": {
        "scripts": ["dist/background.js"]
    },

    "icons": {
        "16": "history.svg",
        "32": "history.svg",
        "48": "history.svg",
        "96": "history.svg"
    },

    "browser_action": {
        "default_icon": "history.svg",
        "default_title": "Better History"
    },

    "permissions": [
        "history"
    ]
}
