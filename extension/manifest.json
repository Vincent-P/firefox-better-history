{
    "description": "A Better History page inspired by Vivaldi",
    "manifest_version": 2,
    "name": "better-history",
    "version": "1.0.0",
    "homepage_url": "https://github.com/Vincent-P/firefox-better-history",
    "background": {
        "scripts": ["dist/background.js"]
    },

    "icons": {
        "16": "history.svg",
        "32": "history.svg",
        "48": "history.svg",
        "96": "history.svg"
    },

    "browser_action": {
        "default_icon": "history.svg",
        "default_title": "Better History"
    },

    "commands": {
        "open-better-history": {
            "suggested_key": {
                "default": "Ctrl+Alt+H"
            }
        }
    },

    "permissions": [
        "history",
        "storage"
    ]
}
